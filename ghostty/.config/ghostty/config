background = 282c34
window-decoration = none
confirm-close-surface = false

# Creating splits
keybind = alt+r=new_split:right
keybind = alt+n=new_split:down
# Navigatings splits
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+h=goto_split:left
keybind = alt+l=goto_split:right
# Resizing splits
keybind = alt+shift+k=resize_split:up,20
keybind = alt+shift+j=resize_split:down,20
keybind = alt+shift+h=resize_split:left,20
keybind = alt+shift+l=resize_split:right,20
keybind = alt+shift+z=toggle_split_zoom
# Closing splits
keybind = alt+x=close_surface
# Create tab
keybind = alt+t=new_tab
keybind = alt+w=close_tab
keybind = alt+right=next_tab
keybind = alt+left=previous_tab

